{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@acmecorp/ui": ["../../packages/@acmecorp/ui/src"],
      "@acmecorp/ui/*": ["../../packages/@acmecorp/ui/src/*"],
      "@acmecorp/env": ["../../packages/@acmecorp/env/src"],
      "@acmecorp/env/*": ["../../packages/@acmecorp/env/src/*"],
      "@acmecorp/db": ["../../packages/@acmecorp/db/src"],
      "@acmecorp/db/*": ["../../packages/@acmecorp/db/src/*"],
      "@acmecorp/auth": ["../../packages/@acmecorp/auth/src"],
      "@acmecorp/auth/*": ["../../packages/@acmecorp/auth/src/*"],
      "@acmecorp/users": ["../../packages/@acmecorp/users/src"],
      "@acmecorp/users/*": ["../../packages/@acmecorp/users/src/*"],
      "@acmecorp/orgs": ["../../packages/@acmecorp/orgs/src"],
      "@acmecorp/orgs/*": ["../../packages/@acmecorp/orgs/src/*"],
      "@acmecorp/router": ["../../packages/@acmecorp/router/src"],
      "@acmecorp/router/*": ["../../packages/@acmecorp/router/src/*"],
      "@acmecorp/api": ["../../packages/@acmecorp/api/src"],
      "@acmecorp/icons": ["../../packages/@acmecorp/icons/src"],
      "@acmecorp/api/*": ["../../packages/@acmecorp/api/src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
